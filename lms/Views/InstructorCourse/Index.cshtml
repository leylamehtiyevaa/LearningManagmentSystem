@model IEnumerable<lms.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="untree_co-hero overlay" style="background-image: url('~/images/img-school-1-min.jpg');height:300px">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Instructor Panel - @ViewData["Title"]</h1>
                    </div>


                </div>

            </div>

        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div>

<div class="container mt-5">
    <h4 class="text-primary">Course List</h4>
    <hr />

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Author</th>
                    <th>imageURL</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Author)</td>
                        <td><img src="@Html.DisplayFor(modelItem => item.imageURL)" style="height:150px; width: auto" alt="Image" class="img-fluid"></td>
                        <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                        <td>
                            <a class="btn btn-primary btn-sm mb-2" asp-controller="InstructorCourse" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-info btn-sm mb-2" asp-controller="InstructorCourse" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger btn-sm mb-2" asp-controller="InstructorCourse"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            @Html.ActionLink("Create Material", "Create", "InstructorMaterial", new { courseId = @item.Id }, new { @class = "btn btn-primary mb-2" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success mb-3">Create New</a>
    </div>
</div>
